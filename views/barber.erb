<h3> Barber page </h3>
<h2> <%=@bar.name%> </h2>

<table class="table table-hover">
  <thead>
  <th scope="row">Name</th>
  <th scope="row">Phone</th>
  <th scope="row">Color</th>
  <th scope="row">Date</th>
  </thead>
  <tbody>
  <%@visits.each do |c| %>
    <tr>
      <td><%=c.name%></td>
      <td><%=c.phone%></td>
      <td><%=c.color%></td>
      <td><%=c.datestamp%></td>
    </tr>
  <% end %>
  </tbody>
</table>
